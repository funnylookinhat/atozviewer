{% extends "layout/main.html.twig" %}

{% block content %}
	<h1>
		{{ action.name }}
	</h1>

	<h4>
		{{ action.ref_formatted }}
	</h4>

	<p>
		{# TODO - Parse description to link to other actions / objects #}
		{{ action.description|parseLinks }}
	</p>

	{% if action.notes|length > 0 %}
		<h4>Notes</h4>
		<ul>
			{% for note in action.notes %}
				<li>{{ note|parseLinks | raw  }}</li>
			{% endfor %}
		</ul>
	{% endif %}

	<h4>Parameters:</h4>
	{% if action.parameters|length > 0 %}
		<ul class="keyvalues">
			{% for keyvalue in action.parameters|sort('keyValueSort') %}
				{% include "partial/keyvalue.html.twig" %}
			{% endfor %}
		</ul>
	{% endif %}

	<h4>Returns:</h4>
	{% if action.returns|length > 0 %}
		<ul class="keyvalues">
			{% for keyvalue in action.returns|sort('keyValueSort') %}
				{% include "partial/keyvalue.html.twig" %}
			{% endfor %}
		</ul>
	{% endif %}

{% endblock %}